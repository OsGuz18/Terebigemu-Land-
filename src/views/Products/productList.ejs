<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/css/productList.css">
        <title>Document</title>
    </head>
    
    <body>
        <%- include("../partials/header") %>
        <main>
            <div>
                <div class="encabezado">
                    <h2> Listado de Productos </h2>
                </div>
                
                <div class="products-container">
                <% for(let producto of productos){ %>
                    <a href="/products/productDetail/<%= producto.id %>">  
                        <section class="product-container" >
                            <figure class="figure">
                                <img src="/images/products/<%= producto.Image %>" alt="imagen del producto">
                            </figure>
                            
                            <div class="product-name"><%= producto.name %></div>
                            
                            <div class="products-precio">
                                <% if(producto.discount == 0 || producto.discount == null){ %>
                                    <div class="precio-principal">$ <%= (producto.price).toLocaleString('en-US',
                                        {minimumFractionDigits:2}) %> 
                                    </div>
                                <% }else { %>
                                    <div class="precio-principal"> $ <%=(producto.price -((producto.price*producto.discount)/100)).toLocaleString('en-US',
                                        {minimumFractionDigits:2})%> 
                                    </div> 
                                    <div class="precio-descuento"> 
                                        <del> / $ <%=(producto.price).toLocaleString('en-US',
                                        {minimumFractionDigits:2})%>
                                        </del>
                                    </div>
                                <% } %>
                            </div>
                        </section>
                    </a> 
                <% } %>
                </div>
            </div>
        </main>
        <%- include("../partials/footer") %>
    </body>
</html>